<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PageLoadingProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/purple_7B1FA1</item>
        <item name="android:colorControlNormal">@color/background</item>
        <item name="android:progressBackgroundTint">@color/background</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/purple_7B1FA1</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>
    <style name="RobotoTextViewStyle500" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="RobotoTextViewStyle400" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextStyle_16_500" parent="RobotoTextViewStyle500">
        <item name="android:textSize">@dimen/font_16</item>
    </style>
    <style name="TextStyleWhite_16_500" parent="TextStyle_16_500">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStylePurple_16_500" parent="TextStyle_16_500">
        <item name="android:textColor">@color/purple_7B1FA1</item>
    </style>
    <style name="TextStyleDarkGrey_14_400" parent="RobotoTextViewStyle400">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
    <style name="TextStyle_18_500" parent="RobotoTextViewStyle500">
        <item name="android:textSize">@dimen/font_18</item>
    </style>
    <style name="TextStyleBlack_18_500" parent="TextStyle_18_500">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextStyleGrey_14_400" parent="RobotoTextViewStyle400">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
    <style name="TextStyle_14_500" parent="RobotoTextViewStyle500">
        <item name="android:textSize">@dimen/font_14</item>
    </style>
    <style name="TextStyleBlack_14_400" parent="RobotoTextViewStyle400">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="TextStyleGreen_14_400" parent="RobotoTextViewStyle400">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="TextStyle_12_500" parent="RobotoTextViewStyle500">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
    <style name="TextStyleTeal_12_500" parent="TextStyle_12_500">
        <item name="android:textColor">@color/teal_700</item>
    </style>
    <style name="TextStyleRed_12_500" parent="TextStyle_12_500">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextStyleRed_14_400" parent="RobotoTextViewStyle400">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <style name="TextStyleBlack_14_500" parent="TextStyle_14_500">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
