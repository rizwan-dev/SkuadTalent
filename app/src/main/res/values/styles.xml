<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="PageLoadingProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/purple_7B1FA1</item>
        <item name="android:colorControlNormal">@color/background</item>
        <item name="android:progressBackgroundTint">@color/background</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/purple_7B1FA1</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>
</resources>