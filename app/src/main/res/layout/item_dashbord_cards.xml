<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_160"
    android:background="@drawable/rounded_shape_white"
    android:elevation="@dimen/dimen_6"
    android:padding="@dimen/dimen_5">

    <ImageView
        android:id="@+id/ivCardLogo"
        android:layout_width="@dimen/dimen_64"
        android:layout_height="@dimen/dimen_64"
        android:padding="@dimen/dimen_10"
        android:src="@drawable/android"
        app:layout_constraintBottom_toTopOf="@+id/tvCardName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center"
        android:text="@string/android"
        android:textSize="@dimen/font_15"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="500"
        app:layout_constraintBottom_toTopOf="@+id/tvActiveProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCardLogo" />

    <TextView
        android:id="@+id/tvActiveProfiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_5"
        android:text="@string/active_number"
        android:textSize="@dimen/font_12"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardName" />

</androidx.constraintlayout.widget.ConstraintLayout>