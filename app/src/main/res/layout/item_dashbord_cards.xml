<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_160dp"
    android:background="@drawable/rounded_shape_white"
    android:elevation="6dp"
    android:padding="@dimen/dimen_5dp">

    <ImageView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/ivCardLogo"
        android:layout_width="@dimen/dimen_64dp"
        android:layout_height="@dimen/dimen_64dp"
        android:padding="@dimen/dimen_10dp"
        android:src="@drawable/android"
        app:layout_constraintBottom_toTopOf="@+id/tvCardName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:text="Android"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvActiveProfiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCardLogo" />

    <TextView
        android:id="@+id/tvActiveProfiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_5dp"
        android:text="Active 20"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardName" />

</androidx.constraintlayout.widget.ConstraintLayout>