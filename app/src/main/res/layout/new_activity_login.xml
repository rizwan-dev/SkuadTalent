<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_25"
    android:padding="@dimen/dimen_32">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="@dimen/dimen_32"
        android:id="@+id/iv_skuadLogo"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="@dimen/dimen_60"
        android:src="@drawable/skuad_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView

        android:id="@+id/tv_welcome"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32"
        android:gravity="center"
        android:text="@string/welcome_to_skuad"
        android:textColor="@color/black"
        android:textSize="@dimen/font_25"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_skuadLogo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_loginInstruction"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32"
        android:gravity="center"
        android:text="@string/sign_in_instruction"
        android:textColor="@color/black"
        android:textSize="@dimen/font_17"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btnSignInwithGoogle"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="55dp"
        android:paddingHorizontal="@dimen/dimen_15"
        android:layout_marginVertical="@dimen/dimen_20"
        android:background="@drawable/rounded_shape_white"
        android:drawableLeft="@drawable/ic_google"
        android:gravity="center"
        android:text="@string/continue_with_google"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/font_17"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>