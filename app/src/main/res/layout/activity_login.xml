<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_25"
        android:padding="@dimen/dimen_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_skuadLogo"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginTop="@dimen/dimen_32"
            android:src="@drawable/ic_splash_screen_skuad_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView

            android:id="@+id/tv_welcome"
            style="@style/OpenSansTextViewStyleBlack_20_600"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32"
            android:gravity="center"
            android:text="@string/welcome_to_skuad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_skuadLogo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_loginInstruction"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32"
            android:gravity="center"
            android:text="@string/sign_in_instruction"
           style="@style/OpenSansTextViewStyleGrey_dark_16_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnSignInwithGoogle"
            style="@style/OpenSansTextViewStyleWhite_16_800"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="55dp"
            android:layout_marginVertical="@dimen/dimen_20"
            android:background="@drawable/rounded_shape_red"
            android:drawableLeft="@drawable/ic_g_icon"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_15"
            android:text="@string/continue_with_google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_loginInstruction" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/top_banner"
        android:layout_width="411dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_curved_top"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>