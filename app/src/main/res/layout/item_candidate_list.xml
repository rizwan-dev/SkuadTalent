<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_20dp"
    android:layout_marginHorizontal="@dimen/dimen_20dp"
    >



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCandidateName"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Candidate Name "
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvYearsOfExperience"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Years of experience "
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCandidateName" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSkills"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Skills like Java, Android, Kotlin "
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvYearsOfExperience" />

    <View
        android:id="@+id/divider"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="@id/tvCandidateName"
        app:layout_constraintEnd_toEndOf="@id/tvCandidateName"
        app:layout_constraintTop_toBottomOf="@id/tvSkills"
        app:layout_constraintBottom_toBottomOf="parent"
       />


</androidx.constraintlayout.widget.ConstraintLayout>